<% if signed_in? %>
  <ul>
    <% flash.each do |msg_key, msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>

  <div class="wide-form">
    <%= form_for :list, url: createlist_path do |f| %>
      <%= f.label "List name" %>
      <%= f.text_field :name %>
      
      <%= f.submit "Create list" %>
    <% end %>
  </div>
  
  <ul id="list-container">
    <% @lists.each do |list| %>
      <li class="list-item"><%= list.name %></li>
    <% end %>
  </ul>
<% end %>